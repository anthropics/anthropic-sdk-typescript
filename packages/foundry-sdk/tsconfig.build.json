{
  "extends": "./tsconfig.json",
  "include": ["dist/src"],
  "exclude": ["dist/src/internal/detect-platform.ts"],
  "compilerOptions": {
    "rootDir": "./dist/src",
    "paths": {
      "@anthropic-ai/foundry-sdk/*": ["src/*"],
      "@anthropic-ai/foundry-sdk": ["src/index.ts"]
    },
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "pretty": true,
    "sourceMap": true
  }
}
